{
    "manifest_version": 2,
    "name": "YouTube Video Downloader",
    "version": "1.0",
    "description": "Download YouTube videos easily",
    "permissions": ["activeTab", "https://ssyoutube.com/"],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "content_scripts": [
      {
        "matches": ["*://*.youtube.com/*"],
        "js": ["content.js"]
      }
    ]
  }
  